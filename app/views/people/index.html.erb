    </p>
    <p>
        <input v-model="firstName">
    </p>
    <br>
    <br>
    <p>
        {{message}}
    </p>
    <p>
        <button class="btn btn-primary" v-on:click="execute"> execute </button>
    </p>

    <script>
        if(!window.rails){
            window.rails = {};
        }
        rails = window.rails;
        rails.objPeople = <%= raw @people.to_json %>;
    </script>

    <div v-for="person in people">
        <p>{{person.name}}</p>
        <p>{{person.age}}</p>
        <p>{{person.memo}}</p>
    </div>
    <%= link_to 'New Person', new_person_path %>
</div>
